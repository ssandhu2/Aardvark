<!DOCTYPE html>
<html lang="en">
<% include layout/header %>
<body>
  <div>
    <div>
      <% include layout/navbar %>
    </div>
    <br />
     <div class="container">
     <div class="jumbotron">
        <h4><strong>*SFSU Software Engineering Project CSC 648-848, Fall 2019.  For Demonstration Only</strong></h4>
        </div>
  </div> 
<div class="container">
    <div>
      <h1>Create Post</h1>
      <form class="center" method="POST" action="/post" enctype="multipart/form-data">
        <div class="form-row">
          <div class="form-group col">
            <label for="productname">Item</label>
 
            <% let itemN = ""; %>
            <input name="nameofitem" type="text" class="form-control" id="nameofitem" placeholder="Name of Item"
              value="<%= itemN %>" required/>
          </div>
        </div>
 
        <% let itemP = ""; %>
        <div class="form-row">
          <div class="form-group col">
            <label for="price">Price</label>
            <input name="price" type="text" class="form-control" id="price" placeholder="Price" value="<%= itemP %>" required/>
          </div>
        </div>
 
 
        <div class="form-group row">
          <div class="form-group col">
            <label for="category">Category</label>
            <!-- <select name = "type" id="category" class="form-control" required>
              <option selected>Select</option>
              <option>Text Books</option>
              <option>Home Goods</option>
              <option>School Supplies</option>
            </select> -->
 
            <select name="type" id="category" class="form-control" required>
                <option selected="selected">Select an option</option>
                <option value="texts" <% if(type="texts") { %>  > <% } %> Texts </option>
                <option value="school supplies" <% if(type="school supplies") { %>  > <% } %> School Supplies </option>
                <option value="home goods" <% if(type="home goods") { %>> <% } %> Home Goods </option>
            </select>
          </div>
        </div>
 
        <div class="form-group-col">
          <label for="item_description">Description</label>
          <!-- <input type="text" class="form-control" id="item_description" placeholder="Description"> -->
 
          <% let itemD = ""; %>
          <textarea class="form-control" rows="5" id="item_description" name="item_description"
            value="<%= itemD %>"></textarea>
        </div>
 
        <br />
        <!--upload image-->
        <label for="item_image">Image</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
          </div>
          <div class="custom-file">
            <input type="file" onchange="readURL(this);" name="itemImage" class="custom-file-input" id="itemImage"
              aria-describedby="inputGroupFileAddon01" />
            <label class="custom-file-label" for="itemImage">Choose file</label>
          </div>
        </div>
        <script>
          function readURL(input) {
            if (input.files && input.files[0]) {
              var reader = new FileReader();
              reader.onload = function (e) {
                $('#uploadedImage')
                  .attr('src', e.target.result);
              };
              reader.readAsDataURL(input.files[0]);
            }
          }
        </script>
       
        <div align="right">
          <button type="submit" class="btn btn-warning" style="margin-top: 20px; margin-bottom: 10px;">Submit</button>
        </div>
      </form>
      <div align="right">
         <b><i>*May take 24 hours for approval</i></b>
      </div>
    </div>
  </div>
  </div>
  <% include layout/footer %>
</body>
 
</html>
